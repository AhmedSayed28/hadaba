function getError(errorMsgKey) {
	var ojb = localizedStrings[errorMsgKey];
	return ojb[lang].toString();
}

function showError(errorMsgKey, errorFieldName) {
	var errorMessage = getError(errorMsgKey);
	document.getElementById(errorFieldName).innerHTML = "";
	document.getElementById(errorFieldName).innerHTML = errorMessage;
	if (errorCount == 0) {
		$('html, body').animate({ scrollTop: $('#' + errorFieldName).offset().top - 300 }, 'fast');
		errorCount++;
	}
}
